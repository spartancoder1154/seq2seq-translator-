import tkinter as tk
from translator.inference import MadatinTranslator

translator = MadatinTranslator()

def translate_text():
    inp = entry.get()
    vec = your_vectorize_function(inp)
    out = translator.decode(vec)
    output_label.config(text=out)

root = tk.Tk()
root.title("Madatin â†’ Chinese Translator")

entry = tk.Entry(root, width=50)
entry.pack()

button = tk.Button(root, text="Translate", command=translate_text)
button.pack()

output_label = tk.Label(root, text="", font=("Arial", 14))
output_label.pack()

root.mainloop()
